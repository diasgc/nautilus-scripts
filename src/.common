# debug script to ~/convert.log
if $debug2file; then  
  exec 22>$HOME/convert.log &>>$HOME/convert.log
  BASH_XTRACEFD=22
  set -x
fi

test -z "$(command -v zenity)" && exit 1

checkPackages(){
  for pkg in "$@"; do
    if [ -z "$(command -v $pkg)" ]; then
      zenity --error --text "<b>$pkg is not installed</b>\n\nPlease run sudo apt install $pkg"
      exit 1
    fi
  done
}